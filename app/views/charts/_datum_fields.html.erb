<tr class="nested-fields data-fields">
  <td>
    <%= f.input :value, label: false, as: :string %>
  </td>
  <td>
    <%= f.input :label, label: false %>
  </td>
  <td>
    <%= f.input :color, label: false, input_html: { class: :minicolors } %>
